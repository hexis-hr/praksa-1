<body style="text-align: center">

    <h1>Manage Users</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <br>
            <div class="alert alert-{{ label }}" role="alert">
                {{ message }}
            </div>
            <br>
        {% endfor %}
    {% endfor %}

    <table class="table-borderless">
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Role</th>

        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.roles[0] }}</td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modifyModal{{ user.userid }}">
                        Modify
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modifyModal{{ user.userid }}" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title" id="modifyModalLabel">Modify User</h1>
                                </div>
                                <div class="modal-body">
                                    <!-- render the form below with Symfony instead? -->
                                    <form id="modify_form{{ user.userid }}" method="POST" action="manage_users/modify/{{ user.userid }}">
                                        <div class="form-group">
                                            <label for="UID">UID</label>
                                            <input type="text" class="form-control-inline" value="{{ user.userid }}" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for="username">Username</label>
                                            <input type="text" class="form-control-inline" name="username" value="{{ user.username }}">
                                        </div>
                                        <div class="form-group">
                                            <label for="firstname">First Name</label>
                                            <input type="text" class="form-control-inline" name="firstname" value="{{ user.firstname }}">
                                        </div>
                                        <div class="form-group">
                                            <label for="lastname">Last Name</label>
                                            <input type="text" class="form-control-inline" name="lastname" value="{{ user.lastname }}">
                                        </div>

                                        <div class="form-group">
                                            <label for="lastname">Password</label>
                                            <input type="password" class="form-control-inline" name="password">
                                        </div>

                                        {% if user.userid != cur_user_id %}
                                            <div class="form-group">
                                                <label for="admin_role">Administrator</label>
                                                <input type="checkbox" name="admin_role" class="form-control-inline" {{ user.roles[0] == 'ROLE_ADMIN' ? 'checked'}} ">
                                            </div>
                                        {% endif %}
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary" form="modify_form{{ user.userid }}">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

                {% if user.userid != cur_user_id %}
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ user.userid }}">
                            Delete
                        </button>

                        <!-- Modal -->
                        <!-- TODO: Fix the delete modal so it pops up upon clicking the Delete button
                        <div class="modal fade" id="#deleteModal{{ user.userid }}" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="deleteModalLabel">Delete User</h1>
                                    </div>
                                    <div class="modal-body">
                                        ...
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        -->
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
</body>
